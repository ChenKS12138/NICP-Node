<!DOCTYPE html>
<html>
{% import "../utils.nunj" as util %}

{{ util.head('通知公告') }}
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
    {{ util.header("username","/asset/AdminLTE/img/user2-160x160.jpg","user description") }}
    {{ util.sidebar(
    [
    {
        header:"队伍信息管理",
        items:[{
        active:true ,
        name:"通知公告",
        icon:"fa-newspaper-o",
        herf:"##"
        },{
        active:false,
        name:"队伍信息",
        icon:"fa-link",
        herf:"##"
        },{
        active:false,
        name:"项目信息",
        icon:"fa-link",
        herf:"##"
        },{
        active:false,
        name:"文件上传",
        icon:"fa-link",
        herf:"##"
        },{
        active:false,
        name:"密码修改",
        icon:"fa-link",
        herf:"##"
    }]
    }
    ]) }}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {{ util.content_header("通知公告","请注意及时查阅",["队伍管理","通知公告"]) }}
        <!-- Main content -->
        <section class="content">
            <!-- Your Page Content Here -->
        {% for news in newsList %}
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ news.title }}</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    {{ news.content | safe  }}
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <i class="fa fa-eye"></i> {{ news.viewCount }}  由 {{ news.author }} 发布于 {{ news.createdAt }}
                </div>
                <!-- /.box-footer-->
            </div>
        {% endfor %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{ util.footer() }}
</div>
{{ util.js() }}
</body>
</html>
