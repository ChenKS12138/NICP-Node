<!DOCTYPE html>
<html>
{% import "../utils.nunj" as util %}
{% import "./main.nunj" as main %}
{{ util.head("修改密码") }}
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
    {{ main.header(4) }}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {{ util.content_header("修改密码","请避免使用弱密码",["后台管理","修改密码"]) }}
        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">修改密码</h3>
                </div>
                <div class="box-body">

                    <form class="form-horizontal" id="login-form"  method="POST" action="../">
                        <div class="form-group">
                            <label for="old_password" class="col-sm-1 control-label">旧密码</label>
                            <div class="col-sm-10">
                                <input type="password" name="old_password" class="form-control" id="author" placeholder="密码">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="new_password" class="col-sm-1 control-label">新密码</label>
                            <div class="col-sm-10">
                                <input type="password" name="new_password" class="form-control" id="author" placeholder="密码">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="again_password" class="col-sm-1 control-label">重复新密码</label>
                            <div class="col-sm-10">
                                <input type="password" name="again_password" class="form-control" id="author" placeholder="密码">
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-right">提交</button>
                        </div>
                    </form>
                </div>

            </div>
            <!-- /.box -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{ util.footer() }}
</div>
{{ util.js() }}
<script src="/asset/plugins/jQuery-form/jquery.form.min.js"></script>
<!-- Page script -->
<script>
    $('#login-form').submit(function (event) {
        event.preventDefault();
        //TODO:前端验证表单
        $(this).find('button').addClass("disabled").prop("disabled", true);
        var that = this;
        $(this).ajaxSubmit(function (resp) {
            if (resp.status == "success") {
                alert("保存成功");
            } else if (resp.status == "error") {
                alert("保存失败，相关信息：" + JSON.stringify(resp.data));
            } else {
                alert("未知错误");
            }
            $(that).find('button').removeClass("disabled").prop("disabled", false);
        });
        return false;
    });
</script>
</body>
</html>
