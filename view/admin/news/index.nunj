<!DOCTYPE html>
<html>
{% import "../../utils.nunj" as util %}
{% import "../main.nunj" as main %}
{{ util.head("通知公告管理") }}
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
    {{ main.header(0) }}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {{ util.content_header("通知公告管理","关于公告的一切",["后台管理","通知公告管理"]) }}
        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->
                <div class="box">
                    <div class="box-header with-border">
                        <a type="button" class="btn pull-right btn-success" href="add/">添加</a>
                    </div>

                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                            <tr>
                                <th>序号</th>
                                <th>标题</th>
                                <th>作者</th>
                                <th>受众</th>
                                <th>添加日期</th>
                                <th>阅读量</th>
                                <th>操作</th>
                            </tr>
                            {% for news in newsList %}
                                <tr>
                                    <td>{{ news.id }}</td>
                                    <td>{{ news.title }}</td>
                                    <td>{{ news.author }}</td>
                                    <td>{{ "评委" if news.role==roles.judger else "参赛队伍"}}</td>
                                    <td>{{ news.createdAt }}</td>
                                    <td>{{ news.viewCount }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a type="button" class="btn btn-warning btn-sm" href="edit/{{ news.id }}/">编辑</a>
                                            <a type="button" class="btn btn-danger btn-sm" href="del/{{ news.id }}/">删除</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{ util.footer() }}
</div>
{{ util.js() }}
</body>
</html>
