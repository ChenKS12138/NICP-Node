<!DOCTYPE html>
<html>
{% import "../utils.nunj" as util %}

{{ util.head("通知公告管理") }}
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
    {{ util.header("username","/asset/AdminLTE/img/user2-160x160.jpg","user description") }}
    {{ util.sidebar(
    [
    {
        header:"后台管理",
        items:[{
        active:true,
        name:"通知公告管理",
        icon:"fa-newspaper-o",
        herf:"##"
    },{
        active:false,
        name:"队伍信息管理",
        icon:"fa-link",
        herf:"##"
    },{
        active:false,
        name:"评委信息管理",
        icon:"fa-link",
        herf:"##"
    },{
        active:false,
        name:"文件上传管理",
        icon:"fa-link",
        herf:"##"
    },{
        active:false,
        name:"密码修改",
        icon:"fa-link",
        herf:"##"
    }]
    }
    ]) }}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {{ util.content_header("通知公告管理","关于公告的一切",["后台管理","通知公告管理","添加通知公告"]) }}
        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">添加通知公告</h3>
                </div>
                <div class="box-body">

                    <form class="form-horizontal"  method="POST" action="./">
                        <div class="form-group">
                            <label for="title" class="col-sm-1 control-label">标题</label>
                            <div class="col-sm-10">
                                <input type="text" name="title" class="form-control" id="title" placeholder="标题">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="author" class="col-sm-1 control-label">作者</label>
                            <div class="col-sm-10">
                                <input type="text" name="author" class="form-control" id="author" placeholder="作者">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="radio">
                                <label>
                                    <input type="radio" name="role"
                                           id="role-admin"
                                           value="{{ roles.judger }}">
                                    评委
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="role"
                                           id="role-admin"
                                           value="{{ roles.team }}"
                                           checked>
                                    参赛队伍
                                </label>
                            </div>
                        </div>
                        <textarea id="editor" name="content" rows="10" cols="80">
                        </textarea>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-right">提交</button>
                        </div>
                    </form>
                </div>

            </div>
            <!-- /.box -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{ util.footer() }}
</div>
{{ util.js() }}
<!-- CK Editor -->
<script src="https://cdn.ckeditor.com/4.5.7/standard/ckeditor.js"></script>
<script>
    $(function () {
        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('editor');
    });
</script>
</body>
</html>
