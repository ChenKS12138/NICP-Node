<!DOCTYPE html>
<html>
{% import "../../utils.nunj" as util %}
{% import "../main.nunj" as main %}
{{ util.head("文件上传管理") }}
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
    {{ main.header(3) }}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {{ util.content_header("文件上传管理","好多文件。。",["后台管理","文件上传管理"]) }}
        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->
            <div class="box">
                <div class="box-header with-border">
                    <a type="button" class="btn pull-right btn-success" href="add/">添加</a>
                </div>

                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                        <tr>
                            <th>序号</th>
                            <th>文件名</th>
                            <th>文件大小</th>
                            <th>上传者类型</th>
                            <th>上传者ID</th>
                            <th>下载权限</th>
                            <th>添加日期</th>
                            <th>实际路径</th>
                            <th>操作</th>
                        </tr>
                        {% for file in fileList %}
                            <tr>
                                <td>{{ file.id }}</td>
                                <td>{{ file.fileName }}</td>
                                <td>{{ file.size }}</td>
                                <td>{{ file.uploaderRole }}</td>
                                <td>{{ file.uploaderId }}</td>
                                <td>{{ file.role }}</td>
                                <td>{{ file.createdAt }}</td>
                                <td>{{ file.savePath }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a type="button" class="btn btn-info btn-sm" href="download/{{ file.id }}/">下载</a>
                                        <a type="button" class="btn btn-danger btn-sm" href="del/{{ file.id }}/">删除</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{ util.footer() }}
</div>
{{ util.js() }}
</body>
</html>
